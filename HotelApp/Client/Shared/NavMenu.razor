
<div class="container-fluid">
    <div class="text-center">
        <img src="images/logo.png" width="130" height="130" />
    </div>

    <div class="d-flex flex-column gap-3 mt-4">
        <div class="mt-3">
            <button type="button" class="btn btn-light btn-md text-uppercase fw-bold shadow-sm w-100" @onclick="NavegarAOtraPagina">
                Habitaciones
            </button>
        </div>
        <div class="mt-3">
            <button type="button" class="btn btn-light btn-md text-uppercase fw-bold shadow-sm w-100" @onclick="NavegarAOtraPagina2">
                Reservas
            </button>
        </div>
        <div class="mt-3">
            <button type="button" class="btn btn-light btn-md text-uppercase fw-bold shadow-sm w-100" @onclick="NavegarAHuespedes">
                Lista de Huespedes
            </button>
        </div>
    </div>
</div>





@code {
    [Inject]
    private NavigationManager NavigationManager { get; set; }

    private void NavegarAOtraPagina()
    {
        NavigationManager.NavigateTo("/");
    }
    private void NavegarAOtraPagina2()
    {
        NavigationManager.NavigateTo("/reserva");
    }

    bool Error;
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;

    }
    List<Habitacion> habitaciones;
    int habitacionesDisponibles = 0;
    int habitacionesNoDisponibles = 0;
    int habitacionesEnMantenimiento = 0;

    private void NavegarAPersonas()
    {
        NavigationManager.NavigateTo("/personas");
    }

    private void NavegarAHuespedes()
    {
        NavigationManager.NavigateTo("/huespedes");
    }
}